<project default="maven" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<target name="maven">

		<condition property="executable" value="mvn">
			<os family="unix" />
		</condition>
		<condition property="executable" value="mvn.bat">
			<os family="windows" />
		</condition>

		<exec executable="${executable}">

			<arg value="clean" />
			<arg value="verify" />

			<arg value="--errors" />

			<arg value="--activate-profiles" />
			<arg value="it-02" />

			<arg value="--define" />
			<arg value="it.test=TestDeploy,TestScanner,TestMailer" />

		</exec>

	</target>

</project>
